<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <!--Para el form_title se crea un helper quee pondra el titulo segun corresponda-->
      <h1>
        <%= form_title %>
      </h1>
      <% if @product.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @product.errors.full_messages.each do |msg|%>
              <li>
                <%= msg %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.number_field :price, min: 0, step: 0.01, class: "form-control input-lg" %>
        </div>
        <div class="form-check">
          <%= collection_check_boxes(:product, :category_ids, Category.all, :id, :name) %>
        </div>
        <div>
          <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>